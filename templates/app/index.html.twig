{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<h1 class="text-center">Accueil</h1>

<div class="mt-3 row gx-2">
{% for produit in produits %}
{% if produit.stock > 0 %}

<div class="col-md-4">
    <div class="card text-white bg-dark mb-3" style="max-width: 20rem;">
  <div class="card-header"><img src="{{ asset("img/upload/" ~ produit.photo) }}" alt="" class="img-fluid"></div>
  <div class="card-body">
    <h4 class="card-title text-center">{{ produit.titre }}</h4>
    <p class="card-text text-end">Prix : {{ produit.prix }}€</p>
    <div class="text-center">
    <a href="{{ path('cart_add', {id: produit.id}) }}" class="btn btn-outline-light">Ajouter au panier</a>
    </div>
  </div>
</div>
</div>
{% else %}
<div class="col-md-4">
    <div class="card text-white bg-dark mb-3" style="max-width: 20rem;">
  <div class="card-header"><img src="{{ asset("img/upload/" ~ produit.photo) }}" alt="" class="img-fluid"></div>
  <div class="card-body">
    <h4 class="card-title text-center">{{ produit.titre }}</h4>
    <p class="card-text text-end">Prix : {{ produit.prix }}€</p>
    <div class="text-center">
    <p class="text-danger">Stock épuisé</p>
    </div>
  </div>
</div>
</div>

{% endif %}

{% endfor %}


</div>

{% endblock %}
