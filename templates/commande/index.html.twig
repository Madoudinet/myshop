{% extends 'base.html.twig' %}

{% block title %}Gestion des commandes{% endblock %}

{% block body %}
<h1 class="text-center">Gestion des commandes</h1>

<table class="table table-striped">
    <thead>
        <tr>                   
            <th>Commande</th>             
            <th>Membre</th>
            <th>Produit</th>
            <th>Quantité</th>
            <th>Montant</th>
            <th>Etat</th>
            <th>Date d'enregistrement</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tfoot>
    </tfoot>
    <tbody>
        {% for com in coms %}
            <tr>
                <td>n° {{ com.id }}</td>
                <td>{{ com.membre.pseudo }}</td>
                <td>{{ com.produit.titre }}</td>
                <td>{{ com.quantite }}</td>
                <td>{{ com.montant * com.quantite}} €</td>
                <td>{{ com.etat }}</td>
                <td>{{ com.dateEnregistrement|date('d/m/Y') }}</td>
                <td>
                <a href="{{ path('admin_commande_modify', {id: com.id}) }}" class="text-info me-3"><i class="bi bi-pencil-square"></i></a>
                    <a href="{{ path('admin_commande_delete', {id: com.id}) }}" class="text-danger"><i class="bi bi-trash3-fill"></i></a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
