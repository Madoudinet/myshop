{{ indice }}
<br>
{% endfor %}
</td> #}
<td>{{ produit.taille }}</td>
<td>{{ produit.collection }}</td>
<td><img src="{{ asset("img/upload/" ~ produit.photo) }}" alt="" width="50"></td>
<td>{{ produit.prix }} â‚¬</td>
<td>{{ produit.stock }}</td>
<td>{{ produit.dateEnregistrement|date('d/m/Y') }}</td>
<td>
<a href="{{ path('admin_modify', {id: produit.id}) }}" class="text-info me-2"><i class="bi bi-pencil-square"></i></a>
<a href="{{ path('admin_delete', {id: produit.id}) }}" class="text-danger"><i class="bi bi-trash3-fill"></i></a>
</td>
</tr>
{% endfor %}
</tbody>
</table>

{% endblock %}
